# Environment variables for Labortrovilo

# Database Configuration
DATABASE_URL=sqlite:///./labortrovilo.db

# Playwright Settings
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_TIMEOUT=30000

# User Agent
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# AI Configuration
# Obtén tu API key de: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# O usa Claude (Anthropic): https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Proveedor de IA: "openai" o "anthropic"
AI_PROVIDER=openai

# Modelo a usar (opciones: gpt-4o-mini, gpt-4, claude-3-haiku, claude-3-sonnet)
AI_MODEL=gpt-4o-mini

# Habilitar caché para evitar llamadas duplicadas
AI_CACHE_ENABLED=true
